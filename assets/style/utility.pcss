.flex {
  display: flex;
}

.grid {
  display: grid;
}

.text-center {
  text-align: center;
}

.mx-auto {
  margin-inline: auto;
}

.container {
  padding-inline: clamp(1.25rem, 5.25vw, 2.5rem);
  margin-inline: auto;
  max-width: 70rem;
  width: 100%;
  position: relative;
  z-index: 0;
}

.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}
